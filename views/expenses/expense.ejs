<%- include('../partials/header.ejs') %>

<div class="container">
    <h2><%= expense.name %></h2>
    <h3>Category: <%= expense.category %></h3>
    <h3>Amount: $<%= expense.amount %></h3>
    <h3>Date: <%= expense.date ? new Date(expense.date).toLocaleDateString() : "N/A" %></h3>

    <div style="margin-top: 20px;">
        <div class="action-buttons">
        <a href="/expenses/<%= expense._id %>/edit" class="edit-btn">Edit</a>
        
        <form action="/expenses/<%= expense._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this expense?');" class="delete-btn">
                Delete
            </button>
        </form>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>

