<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <ul class="header">
        <li style="float: left;"><a href="/">Home</a></li>

        <% if (!user) { %>
            <li><a href="/users/login">Login</a></li>
            <li><a href="/users/signup">Sign Up</a></li>
        <% } else { %>
            <li><a href="/users/profile">Profile</a></li>
            <li><a href="/expenses">Expenses</a></li>  
            <li><a href="/users/logout">Logout</a></li>  
        <% } %>
    </ul>

    <% if (typeof currentPage !== 'undefined' && currentPage === 'expenses') { %>
        <form action="/expenses" method="GET" class="search-form">
            <input type="text" name="searchTerm" placeholder="Search description">
            <input type="text" name="category" placeholder="Category">
            <input type="date" name="startDate">
            <input type="date" name="endDate">
            <input type="number" step="0.01" name="minAmount" placeholder="Min Amount">
            <input type="number" step="0.01" name="maxAmount" placeholder="Max Amount">
            <button type="submit">Search</button>
        </form>
    <% } %>
</body>
</html>
